@model PropinaWeb.ViewModel.PlanillaViewModel.AltaPlanillaViewModel

@{
    ViewBag.Title = "AltaPlanilla";
}

<div class="row">
    <div class="col-md-10 pull-right">
        <h2>Nueva Planilla</h2>
        @using (Html.BeginForm("AltaPlanilla", "Planilla", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            //Seguridad
            @Html.AntiForgeryToken()

            @*@Html.HiddenFor(x => x.administrador.Id)*@

            //Lista de errores
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(x => x.Texto, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(x => x.Texto, new { @id = "pregunta", @class = "form-control", @placeholder = "Texto" })
                @Html.ValidationMessageFor(x => x.Texto, "", new { @class = "text-danger" })
            </div>

            <div>FALTA SELECCIONAR EMPLEADO</div>

            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Ingresar
            </button>
        }
    </div>
</div>