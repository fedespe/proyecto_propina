@model ET.MensajePrincipal

@{
    ViewBag.Title = "AltaMensaje";
}

<div class="row">
    <div class="col-xs-12">
        <h2>Ingresar Mensaje</h2>
        @using (Html.BeginForm("AltaMensaje", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            //Seguridad
            @Html.AntiForgeryToken()

            @*@Html.HiddenFor(x => x.administrador.Id)*@

            //Lista de errores
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(x => x.Titulo, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(x => x.Titulo, new { @id = "Titulo", @class = "form-control", @placeholder = "Titulo" })
                @Html.ValidationMessageFor(x => x.Titulo, "", new { @class = "text-danger" })
            </div>
            @*<div class="form-group">
                @Html.LabelFor(x => x.Texto, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(x => x.Texto, new { @id = "Texto", @class = "form-control", @placeholder = "Texto" })
                @Html.ValidationMessageFor(x => x.Texto, "", new { @class = "text-danger" })
            </div>*@
            <div class="form-group">
                @Html.LabelFor(x => x.Texto, htmlAttributes: new { @class = "control-label" })
                @Html.TextArea("Texto", null, new { @placeholder = "Ingrese el texto correspondiente...", @class = "form-control", @rows = "8", @cols = "60" })
                @Html.ValidationMessageFor(x => x.Texto, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Fecha, htmlAttributes: new { @class = "control-label" })
                <input class="form-control" type="date" id="Fecha" name="Fecha" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>

            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Ingresar Mensaje
            </button>
        }
    </div>
</div>



