@model ET.Reparto

@{
    ViewBag.Title = "AltaReparto";
}

<div class="row">
    <div class="col-xs-12">
        <h2>Ingresar Reparto</h2>
        @using (Html.BeginForm("AltaReparto", "Reparto", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            //Seguridad
            @Html.AntiForgeryToken()

            @*@Html.HiddenFor(x => x.administrador.Id)*@

            //Lista de errores
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(x => x.MontoTotalPesos, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(x => x.MontoTotalPesos, new { @id = "MontoTotalPesos", @class = "form-control", @placeholder = "MontoTotalPesos" })
                @Html.ValidationMessageFor(x => x.MontoTotalPesos, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.MontoTotalDolares, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(x => x.MontoTotalDolares, new { @id = "MontoTotalDolares", @class = "form-control", @placeholder = "MontoTotalDolares" })
                @Html.ValidationMessageFor(x => x.MontoTotalDolares, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Fecha, htmlAttributes: new { @class = "control-label" })
                <input class="form-control" type="date" id="Fecha" name="Fecha" value="@DateTime.Now.ToString("dd-MM-yyyy")" />
            </div>

            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Ingresar
            </button>
            }
        </div>
</div>

